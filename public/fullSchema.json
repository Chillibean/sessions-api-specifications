{
  "openapi": "3.0.0",
  "info": {
    "version": "2.1.0",
    "title": "Sessions API",
    "description": "This API is used to generate sessions",
    "contact": {
      "name": "ChilliPharm",
      "url": "https://www.chillipharm.com"
    }
  },
  "servers": [
    {
      "url": "http://chillipharm.test:3000/api/v1",
      "description": "Local development"
    },
    {
      "url": "https://www.chillipharm.com/api/v1",
      "description": "Production"
    }
  ],
  "tags": [
    {
      "name": "Sessions",
      "description": "Operations related to sessions"
    },
    {
      "name": "Users",
      "description": "Operations related to users"
    },
    {
      "name": "Logs",
      "description": "Operations related to logs"
    }
  ],
  "paths": {
    "/session": {
      "get": {
        "summary": "Get active status of current user session",
        "description": "Get active status of current user session",
        "tags": [
          "Sessions"
        ],
        "operationId": "getSession",
        "security": [
          {
            "userSessionKey": []
          },
          {
            "chillipharmSession": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Active"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "delete": {
        "summary": "End current user session",
        "description": "End current user session",
        "tags": [
          "Sessions"
        ],
        "operationId": "deleteSession",
        "security": [
          {
            "userSessionKey": []
          },
          {
            "chillipharmSession": []
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserStatus"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/logs/heartbeat": {
      "post": {
        "summary": "Logs the heartbeat for a logged in user",
        "description": "Logs the heartbeat for a logged in user to verify the session is still active",
        "tags": [
          "Logs"
        ],
        "operationId": "createHeartbeat",
        "security": [
          {
            "userSessionKey": []
          },
          {
            "chillipharmSession": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "authenticity_token": {
                    "type": "string",
                    "description": "The authenticity token of the current user session",
                    "example": "valid_token"
                  },
                  "log_type": {
                    "type": "string",
                    "description": "The type of log",
                    "example": "watching video"
                  }
                },
                "required": [
                  "authenticity_token",
                  "log_type"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {}
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/users/me": {
      "get": {
        "summary": "Get current user",
        "description": "Get current user",
        "tags": [
          "Users"
        ],
        "operationId": "getUsersMe",
        "security": [
          {
            "userSessionKey": []
          },
          {
            "chillipharmSession": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/BadRequest"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "userSessionKey": {
        "type": "apiKey",
        "in": "cookie",
        "name": "user_session_key",
        "description": "User session key cookie"
      },
      "chillipharmSession": {
        "type": "apiKey",
        "in": "cookie",
        "name": "_chillipharm_session",
        "description": "ChilliPharm session cookie"
      }
    },
    "schemas": {
      "Active": {
        "type": "object",
        "properties": {
          "active": {
            "type": "boolean",
            "description": "The active status of the current user session",
            "example": true
          },
          "minutes_remaining": {
            "type": "integer",
            "description": "The minutes remaining in seconds for the current user session",
            "example": 12
          }
        },
        "required": [
          "active"
        ]
      },
      "Error": {
        "description": "An error",
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "The error message",
            "example": "Bad request. Missing or invalid input parameters."
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "The user ID",
            "example": 123
          },
          "email": {
            "type": "string",
            "description": "The user's email address",
            "example": "test@gmail.com"
          },
          "uuid": {
            "type": "string",
            "description": "The user's UUID",
            "example": "valid_token"
          },
          "first_name": {
            "type": "string",
            "description": "The user's first name",
            "example": "John"
          },
          "last_name": {
            "type": "string",
            "description": "The user's last name",
            "example": "Doe"
          },
          "authenticity_token": {
            "type": "string",
            "description": "The user's authenticity token",
            "example": "valid_token"
          },
          "permissions": {
            "type": "object",
            "properties": {
              "staff": {
                "type": "boolean",
                "description": "Whether the user is a staff member",
                "example": true
              },
              "super_user": {
                "type": "boolean",
                "description": "Whether the user is a super user",
                "example": false
              },
              "video_services_user": {
                "type": "boolean",
                "description": "Whether the user is a video services user",
                "example": false
              }
            }
          }
        }
      },
      "UserStatus": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "The active status of the current user session",
            "example": "User session is active"
          },
          "minutes_remaining": {
            "type": "integer",
            "description": "The minutes remaining in seconds for the current user session",
            "example": 12
          }
        },
        "required": [
          "message"
        ]
      }
    },
    "responses": {
      "Unauthorized": {
        "description": "Unauthorized. Missing or invalid authentication credentials.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "BadRequest": {
        "description": "Bad request. Missing or invalid input parameters.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Internal server error. Please contact support.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    }
  }
}